{
  "name": "rest-api-nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "NODE_ENV=production nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=production nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "pm2:start:dev": "NODE_ENV=development nest build && pm2 start dist/main.js — name 'api-dev' && pm2 save",
    "pm2:restart:dev": "NODE_ENV=development nest build && pm2 reload api-dev && pm2 save",
    "pm2:start": "NODE_ENV=production nest build && pm2 start dist/main.js — name 'api' && pm2 save",
    "pm2:restart": "NODE_ENV=production nest build && pm2 reload api && pm2 save",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=development jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "db:migrate:dev": "dotenv -e .env.development  -- prisma migrate dev",
    "db:migrate": "dotenv -e .env.production  -- prisma migrate dev"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@as-integrations/fastify": "^2.1.1",
    "@blazity/nest-file-fastify": "^1.0.0",
    "@fastify/multipart": "^9.0.1",
    "@fastify/static": "^7.0.0",
    "@nest-lab/fastify-multer": "^1.2.0",
    "@nestjs/apollo": "^13.0.2",
    "@nestjs/common": "^11.0.8",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^11.0.8",
    "@nestjs/graphql": "^13.0.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.10",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.4.3",
    "@nestjs/platform-socket.io": "^11.0.8",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^11.0.8",
    "@prisma/client": "5.19.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "google-auth-library": "^9.15.1",
    "graphql": "^16.10.0",
    "mongoose": "^8.7.0",
    "nest-winston": "^1.9.7",
    "nestjs-i18n": "^10.5.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.20.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@common/(.*)$": "<rootDir>../src/modules/common/$1",
      "^@user/(.*)$": "<rootDir>../src/modules/user/$1"
    }
  }
}
